<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.FullScreen">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="TextOnShadow" parent="">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="WebViewTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="SearchViewTheme">
        <item name="floatingSearch_backgroundColor">?colorBackgroundFloating</item>
        <item name="floatingSearch_viewSearchInputTextColor">?colorOnBackground</item>
        <item name="floatingSearch_viewSuggestionItemTextColor">@android:color/white</item>
        <item name="floatingSearch_hintTextColor">?colorOnBackground</item>
        <item name="floatingSearch_dividerColor">?colorSurface</item>
        <item name="floatingSearch_clearBtnColor">?colorOnBackground</item>
        <item name="floatingSearch_leftActionColor">?colorOnBackground</item>
        <item name="floatingSearch_menuItemIconColor">?colorOnBackground</item>
        <item name="floatingSearch_suggestionRightIconColor">?colorOnBackground</item>
        <item name="floatingSearch_actionMenuOverflowColor">?colorOnBackground</item>
    </style>

</resources>
